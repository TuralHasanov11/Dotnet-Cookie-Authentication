@model ClaimsViewModel
@{
    ViewData["Title"] = "Claims";
}


<h1>@ViewData["Title"]</h1>

@if (Model.Claims != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Claim Type</th>
                <th>Claim Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.Claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td>@claim.Value</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No claims found.</p>
}